
<div class="card" style="width: 100%;">
  <div class="card-header">
    <strong> Hello, <%= @friend.first_name %></strong>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><strong>First name:</strong>
      <%= @friend.first_name %>
    </li>
    <li class="list-group-item"><strong>Last name:</strong>
      <%= @friend.last_name %>
    </li>
    <li class="list-group-item"><strong>Email:</strong>
      <%= @friend.email %>
    </li>
    <li class="list-group-item"><strong>Phone:</strong>
      <%= @friend.phone %>
    </li>
    <li class="list-group-item"><strong>Twitter:</strong>
      <%= @friend.twitter %>
    </li>
  </ul>
  <div class="card-footer">
    <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-success" %> |
    <%= link_to 'Destroy', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %> |
    <%= link_to 'Back', friends_path, class:"btn btn-secondary" %>
  </div>
</div>

